# Serve static files
Alias /static /home/beshegercom/milkidj/staticfiles
<Directory /home/beshegercom/milkidj/staticfiles>
    Require all granted
</Directory>

# Serve media files
Alias /media /home/beshegercom/milkidj/media
<Directory /home/beshegercom/milkidj/media>
    Require all granted
</Directory>

# Enable Passenger (Python app server)
PassengerEnabled On
PassengerAppRoot /home/beshegercom/milkidj
PassengerPython /home/beshegercom/virtualenv/milkidj/3.11/bin/python3.11_bin
PassengerStartupFile server.py

# Optional: disable directory listing
Options -Indexes
